<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="using:AuroraMusic"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="AuroraMusic.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Aurora Music Player"
        Width="800" Height="600"
        MinWidth="500" MinHeight="400">

	<Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="250,*" Background="#2B2B2B">

		<!-- Header and Open Folder Button -->
		<Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Padding="10" Background="#3C3F41">
			<StackPanel Orientation="Horizontal" Spacing="10">
				<Button Name="OpenFolderButton" Content="Open Music Folder" Click="OpenFolderButton_Click"
                        Background="#4A4D4F" Foreground="White" BorderThickness="0" CornerRadius="5" />
				<TextBlock Name="NowPlayingText" Text="Welcome! Please open a folder to begin."
                           VerticalAlignment="Center" Foreground="White" FontSize="14" />
			</StackPanel>
		</Border>

		<!-- Playlist -->
		<ListBox Name="Playlist" Grid.Row="1" Grid.Column="0"
                 Background="#313335" Foreground="White" BorderThickness="0"
                 SelectionChanged="Playlist_SelectionChanged">
			<ListBox.ItemTemplate>
				<!-- We specify the data type for the template using the correct namespace -->
				<DataTemplate x:DataType="local:PlaylistItem">
					<StackPanel Margin="5">
						<!-- The bindings will now resolve correctly -->
						<TextBlock Text="{Binding Title}" FontWeight="Bold" />
						<TextBlock Text="{Binding Artist}" FontSize="12" Foreground="LightGray" />
					</StackPanel>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>

		<!-- Main Content Area (could be used for album art in the future) -->
		<Border Grid.Row="1" Grid.Column="1" Background="#2B2B2B">
			<!-- Placeholder for future content like visualizations or album art -->
			<TextBlock Text="Modern Music Player" HorizontalAlignment="Center" VerticalAlignment="Center"
                       FontSize="24" Foreground="#555" />
		</Border>

		<!-- Playback Controls -->
		<Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Padding="15" Background="#3C3F41">
			<Grid RowDefinitions="Auto,Auto" ColumnDefinitions="Auto,*,Auto">

				<!-- Progress Slider -->
				<TextBlock Name="TimeLabel" Grid.Row="0" Grid.Column="0" Text="00:00" VerticalAlignment="Center" Foreground="White" Margin="0,0,10,0" />
				<Slider Name="PositionSlider" Grid.Row="0" Grid.Column="1" Minimum="0" Maximum="100" Value="0"
                        VerticalAlignment="Center" />
				<TextBlock Name="DurationLabel" Grid.Row="0" Grid.Column="2" Text="00:00" VerticalAlignment="Center" Foreground="White" Margin="10,0,0,0" />

				<!-- Buttons and Volume -->
				<StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal"
                            HorizontalAlignment="Center" Spacing="15" Margin="0,10,0,0">
					<Button Name="PreviousButton" Content="⏮" Click="PreviousButton_Click" Width="50" Height="50" FontSize="20" CornerRadius="25" />
					<Button Name="PlayPauseButton" Content="▶️" Click="PlayPauseButton_Click" Width="60" Height="60" FontSize="24" FontWeight="Bold" CornerRadius="30" />
					<Button Name="StopButton" Content="⏹" Click="StopButton_Click" Width="50" Height="50" FontSize="20" CornerRadius="25" />
					<Button Name="NextButton" Content="⏭" Click="NextButton_Click" Width="50" Height="50" FontSize="20" CornerRadius="25" />

					<!-- Volume Control -->
					<StackPanel Orientation="Horizontal" Spacing="5" VerticalAlignment="Center" Margin="30,0,0,0">
						<TextBlock Text="🔊" VerticalAlignment="Center" FontSize="20" />
						<Slider Name="VolumeSlider" Width="120" Minimum="0" Maximum="100" Value="100" VerticalAlignment="Center" />
					</StackPanel>
				</StackPanel>
			</Grid>
		</Border>
	</Grid>
</Window>