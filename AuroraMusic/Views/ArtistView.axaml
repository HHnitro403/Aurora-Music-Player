<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="using:AuroraMusic.Models"
             xmlns:viewModels="clr-namespace:AuroraMusic.ViewModels"
             x:DataType="viewModels:ArtistViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AuroraMusic.Views.ArtistView">
  <ListBox ItemsSource="{Binding Artists}" SelectionMode="Single" x:Name="ArtistListBox">
    <ListBox.ItemTemplate>
      <DataTemplate DataType="{x:Type models:Artist}">
        <StackPanel Orientation="Horizontal" Spacing="8">
          <TextBlock Text="{Binding Name}" FontWeight="Bold" VerticalAlignment="Center" />
        </StackPanel>
      </DataTemplate>
    </ListBox.ItemTemplate>
  </ListBox>
</UserControl>
