<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="150"
        x:Class="AuroraMusic.Views.Modals.InputDialog"
        Title="Input Dialog"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        SizeToContent="WidthAndHeight">
    <Grid RowDefinitions="Auto,Auto,Auto" Margin="15">
        <TextBlock Name="PromptTextBlock" Grid.Row="0" Margin="0,0,0,10" TextWrapping="Wrap"/>
        <TextBox Name="InputTextBox" Grid.Row="1" Margin="0,0,0,15"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" IsDefault="True" Name="OkButton" Margin="0,0,10,0"/>
            <Button Content="Cancel" IsCancel="True" Name="CancelButton"/>
        </StackPanel>
    </Grid>
</Window>