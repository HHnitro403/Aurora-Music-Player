<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="using:AuroraMusic.Models"
             xmlns:viewModels="clr-namespace:AuroraMusic.ViewModels"
             x:DataType="viewModels:AlbumViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AuroraMusic.Views.AlbumView">
  <ListBox ItemsSource="{Binding Albums}" SelectionMode="Single" x:Name="AlbumListBox">
    <ListBox.ItemTemplate>
      <DataTemplate DataType="{x:Type models:Album}">
        <StackPanel Orientation="Horizontal" Spacing="8">
          <Image Source="{Binding AlbumArt}" Width="50" Height="50" />
          <StackPanel Spacing="2">
            <TextBlock Text="{Binding Title}" FontWeight="Bold" />
            <TextBlock Text="{Binding Artist.Name}" />
          </StackPanel>
        </StackPanel>
      </DataTemplate>
    </ListBox.ItemTemplate>
  </ListBox>
</UserControl>
